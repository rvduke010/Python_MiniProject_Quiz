# Python Project -1


print("welcome to Quiz")
play=input('Do want to play?' ).lower()
if play != 'yes':
    quit()
print('okay Let\'s play the game')
score=0
answer=input('what is CPU?' )
if answer.lower() == 'central processing unit':
    print('Correct')
    score +=1
else:
    print('incorrect')

answer=input('what is GPU?' )
if answer.lower() == 'graphic processing unit':
    print('Correct')
    score +=1
else:
    print('incorrect')

answer=input('what is Ram?' )
if answer.lower() == 'random access memory':
    print('Correct')
    score +=1
else:
    print('incorrect')
    
print('you got ' + str(score)+' question Correct')
print('you got '+str((score/4)*100)+' percentage')


